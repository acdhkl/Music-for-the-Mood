<%- include("./partials/header.ejs") %>

<% var isMyProfile = false %>
<% if(currentUser && currentUser.id == user.id) { %>
<%  isMyProfile = true;  %>
<% }%>

<div class="profile-page">
<div class="page-header header-filter" data-parallax="true"
    style="background-image:url('data:image/jpeg;base64,');">
</div>
<div class="main main-raised">
    <div class="profile-content">
    <div class="container">
        <div class="row">
            <div class="col-md-6 ml-auto mr-auto text-center">
                <div class="profile">
                <div class="avatar">
                    <img src="https://www.cybecys.com/wp-content/uploads/2017/07/no-profile.png" alt="Circle Image"
                        class=" rounded-circle img-fluid">
                </div>
                <h3><%= user.username %> </h3>
                <% if(isMyProfile) { %>
                <p>
                    <a href="/songs/newer" class="btn btn-info">Add a new song</a>
                </p>
                <% } %>
            </div>
        </div>
        </div>
        <div class="row">
            <div class="col-md-6 ml-auto mr-auto">
                <div class="profile-tabs">
                    <ul class="nav nav-pills nav-pills-icons justify-content-center" role="tablist">
                        <!-- TABS FOR EACH GENRE -->
                        <% genres.forEach(function(genre){ %>
                        <li class="nav-item">
                            <a <% if(genre === genres[0]) { %> class="nav-link active" <% } else { %> class="nav-link"
                                <% } %> href="#<%= genre.toLowerCase()  %>" role="tab" data-toggle="tab">
                                <%= genre %>
                            </a>
                        </li>
                        <% }) %>
                    </ul>
                </div>
            </div>

            <div class="tab-content tab-space" style="width: 100%;">
                <% genres.forEach(function(genre){ %>
                <div id="<%= genre.toLowerCase() %>" <% if(genre === genres[0]) { %> class="tab-pane active">
                    <% } else { %>
                    class="tab-pane">
                    <% } %>
                    <div class="row">
                        <% user.songs.forEach(function(song){ %>
                        <% if(song.type.toLowerCase() === genre.toLowerCase()) { %>
                        <div class="card col-md-4">
                            <iframe class=" card-img-top"
                                src="https://open.spotify.com/embed/track/<%= song.spotifyId%>" height="300"
                                frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
                            <div class="card-block">

                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <p>
                                        <% if(isMyProfile){ %>
                                    <form action="/songs/<%= song._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger">Remove</button>
                                    </form>
                                    <% } else if(currentUser) { %>
                                    <form action="/songs/<%= song._id %>?_method=PUT" method="POST">
                                        <button class="btn btn-info">Upvote</button>
                                    </form>
                                    <% } %>
                                    </p>
                                </div>

                            </div>
                        </div>
                        <% } %>
                        <% }) %>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    </div>
</div>



    <%- include("./partials/footer.ejs") %>