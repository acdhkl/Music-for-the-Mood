<%- include("../partials/header.ejs", {currentUser: currentUser}) %>

<% genres.forEach(function(genre){ %>
<!-- TYPE OF MUSIC -->
<div class="jumbotron">
    <h2>
        <%= genre.toUpperCase() %> SONGS
    </h2>
</div>

<div class="row">
    <% songs.forEach(function(song){ %>
    <% if(song.type && song.type.toLowerCase() === genre.toLowerCase()){ %>
    <div class="card col-sm-6 col-lg-3">
        <iframe class=" card-img-top" src="https://open.spotify.com/embed/track/<%= song.spotifyId%>" height="300"
            frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
        <div class="card-block">
            <p> <%= song.authors.length %> </p>
            <div class="btn-group" role="group" aria-label="Basic example">
                <p>
                <form action="/songs/<%= song._id %>?_method=PUT" method="POST">
                    <button class="btn btn-info">Upvote</button>
                </form>
                <form action="/songs/<%= song._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                </p>
            </div>

        </div>
    </div>
    <% } %>
    <% }) %>
</div>
<% }) %>
<!-- END OF TYPE OF SONG -->


<!-- TYPE OF MUSIC -->
