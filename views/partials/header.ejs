<body>
    <!-- NAVBAR -->
    
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-expand-md navbar-light navbar-transparent">

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#authbuttons">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <!-- Navbar links -->
                    <a class="navbar-brand" href="/songs">Music for the Mood</a>
                    <div class="collapse navbar-collapse" id="authbuttons">
                        <ul class="navbar-nav ml-md-auto">
                            <%if(!currentUser){%>
                            <li class="nav-item active">
                                <a class="nav-link" href="/login">Login </a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/register">Sign Up <span class="sr-only">(current)</span></a>
                            </li>
                            <%	} else { %>
                            <li class="nav-item active dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
