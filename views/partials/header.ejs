                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="/profile/<%= currentUser._id  %> ">My Profile</a>

                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/logout">Logout</a>

                                </div>
                            </li>
                            <%}%>	
                    </ul>
